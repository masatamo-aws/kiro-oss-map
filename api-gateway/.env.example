# Kiro OSS Map API Gateway Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-characters
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://kiro-map.com

# Rate Limiting
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW_MS=900000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/api-gateway.log

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/kiro_map
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=kiro_map
DATABASE_USER=kiro
DATABASE_PASSWORD=password
DATABASE_SSL=false

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# External Services
OPENSTREETMAP_API_URL=https://api.openstreetmap.org
NOMINATIM_API_URL=https://nominatim.openstreetmap.org
OVERPASS_API_URL=https://overpass-api.de/api

# API Keys for External Services
MAPBOX_API_KEY=
GOOGLE_MAPS_API_KEY=
HERE_API_KEY=

# Security
API_KEY_HEADER=X-API-Key
BCRYPT_ROUNDS=12

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Development
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=true