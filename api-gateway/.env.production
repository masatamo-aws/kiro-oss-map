NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# JWT Configuration (CHANGE IN PRODUCTION!)
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=kiro_map_prod
DB_USERNAME=kiro_user
DB_PASSWORD=secure_password_change_this
DB_SSL=true

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=secure_redis_password_change_this
REDIS_DB=0

# CORS Configuration
CORS_ORIGINS=https://kiro-map.com,https://www.kiro-map.com,https://api.kiro-map.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=1000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# OAuth Configuration (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret